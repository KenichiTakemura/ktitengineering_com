<%= raw @service_content %> 
<%= link_to_with_icon_remote(t("contact.us"), lodge_contacts_path(:id => @service_id), "btn btn-primary", "", "icon-envelope-alt", "service-contactus-#{@service_id}", "post")%>
<%= _script(%Q|
	$('\#service-contactus-#{@service_id}').click(function(){
		$('.contact-form').fadeIn("show");
		$('.contact-form').html('#{escape_javascript('<i class="icon-spinner icon-spin icon-2x"></i>')}');
		$('html, body').animate({scrollTop: $('.contact-form').offset().top}, 2000);
	});
|)%>
